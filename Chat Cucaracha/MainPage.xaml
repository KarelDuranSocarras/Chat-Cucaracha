<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chat_Cucaracha.MainPage">

    <ScrollView>
        <VerticalStackLayout x:Name="la"
            Padding="30,0"
            Spacing="25">


            <Entry x:Name="myChatMessage"
                   FontSize="18"
                   Text="hola"
                   Placeholder="Evia tu mensaje"
                   HorizontalOptions="Center"></Entry>
            <Button
                x:Name="sendButton"
                Text="Enviar" 
                HorizontalOptions="Fill" />
            <Label x:Name="chatMessages" FontSize="18" HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
